<div class="text-center">
  <h1>パスワードを忘れた場合</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

<%= form_for(:session, url: reset_password_path) do |f| %>

      <div class="form-group">
        
<%= f.label :email, 'Email' %>
<%= f.email_field :email, class: 'form-control' %>

      </div>

<%= f.submit 'パスワードを再発行する', class: 'btn btn-primary btn-block' %>

<% end %>

  </div>
</div>